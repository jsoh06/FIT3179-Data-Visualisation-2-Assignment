{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Time vs Cost",
    "width": 500,
    "height": 300,
    "data": {
        "values": [
            {"origin": "Gombak", "destination": "KLCC", "time": 22, "fare": 3.1},
            {"origin": "Gombak", "destination": "KL Sentral (KJL)", "time": 32, "fare": 3.6},
            {"origin": "Gombak", "destination": "Kajang", "time": 71, "fare": 6.8},
            {"origin": "KLCC", "destination": "Kajang", "time": 49, "fare": 5.4},
            {"origin": "KL Sentral (KJL)", "destination": "Kajang", "time": 45, "fare": 3.6},
            {"origin": "Bangsar", "destination": "KLCC", "time": 12, "fare": 2.4},
            {"origin": "Subang Jaya", "destination": "KLCC", "time": 41, "fare": 3.7},
            {"origin": "USJ 7 (KJL)", "destination": "KLCC", "time": 50, "fare": 3.4},
            {"origin": "Putra Heights (KJL)", "destination": "KLCC", "time": 66, "fare": 4.1}
          ]
    },
    "params": [
        {
            "name": "origin_station",
            "bind": {
                "input": "select",
                "options": ["All", "Gombak", "KLCC", "KL Sentral (KJL)", 
                "Kajang", "Bangsar", "Subang Jaya", "USJ 7 (KJL)", 
                "Putra Heights (KJL)"],
                "name": "Select Origin Station: "
            },
            "value": "All"
        }
    ],
    "transform": [
        {
            "filter": "origin_station == 'All' || datum.origin == origin_station"
        }
    ],
    "mark": {
        "type": "circle",
        "size": 100,
        "opacity": 0.7
    },
    "encoding": {
        "x": {
            "field": "time",
            "type": "quantitative",
            "title": "Travel Time (minutes)",
            "scale": {"zero": false}
        },
        "y": {
            "field": "fare",
            "type": "quantitative",
            "title": "Fare (MYR)",
            "scale": {"zero": false}
        },
        "color": {
            "field": "origin",
            "type": "nominal",
            "title": "Origin Station"
        },
        "tooltip": [
            {"field": "origin", "type": "nominal", "title": "Origin Station"},
            {"field": "destination", "type": "nominal", "title": "Destination Station"},
            {"field": "time", "type": "quantitative", "title": "Travel Time (minutes)"},
            {"field": "fare", "type": "quantitative", "title": "Fare (MYR)", "format": ".1f"}
        ]
    }
}